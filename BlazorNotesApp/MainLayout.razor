@using BlazorNotesApp.Pages
@using BlazorNotesApp.WeatherModule
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar>
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
		My Application
		<MudSpacer />
		<TemperatureView />
		<Welcome></Welcome>
	</MudAppBar>
	<MudDrawer @bind-Open="@_drawerOpen">
		<MudNavMenu>
			<NotesList />
			<MudNavLink Href="/Note/0" Match="NavLinkMatch.Prefix"><MudIcon Icon="@Icons.Material.Filled.AddCircle" Title="Add" /> New Note</MudNavLink>
		</MudNavMenu>
	</MudDrawer>
	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.Medium">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>
@code {
	bool _drawerOpen = true;

	void DrawerToggle()
	{
		_drawerOpen = !_drawerOpen;
	}

	void LogOut()
	{

	}
}
