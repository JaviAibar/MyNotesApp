@page "/login"
@model BlazorNotesApp.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form action="" method="post">
	<div asp-validation-summary="All"></div>
	<div class="content">
			<label asp-for="Name"><b>Username</b></label>
			<input type="text" placeholder="Enter Username" asp-for="Name">

		<label asp-for="Pass"><b>Password</b></label>
		<input type="password" placeholder="Enter Password" asp-for="Pass">

		<button type="submit">Login</button>
	</div>
	
	<div class="container" style="background-color:#f1f1f1">
		<button type="button" class="cancelbtn">Cancel</button>
	</div>
</form>
<b>No account yet?</b>
<a href="/register">Register</a>
